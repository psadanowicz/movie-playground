<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="adapter"
            type="pawelsadanowicz.movieplayground.feature.dashboard.view.viewmodel.adapter.DashboardAdapter" />

        <variable
            name="recyclerViewAdapter"
            type="pawelsadanowicz.movieplayground.feature.dashboard.view.adapter.DashboardRecyclerViewAdapter" />

        <variable
            name="layoutManager"
            type="android.support.v7.widget.RecyclerView.LayoutManager" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{adapter.error.get() != null ? View.GONE : View.VISIBLE}"
            app:adapter="@{recyclerViewAdapter}"
            app:recyclerViewAdapter="@{recyclerViewAdapter}"
            app:layoutManager="@{layoutManager}"
            app:items="@{adapter.movies}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{adapter.error}"
            android:visibility="@{adapter.error.get() != null ? View.VISIBLE : View.GONE}"
            tools:text="Unknown error. Please try again later." />

    </FrameLayout>
</layout>